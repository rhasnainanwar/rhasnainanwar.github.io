{% assign highlighted_media = site.data.media | where: "highlight", true %}
{% if highlighted_media.size > 0 %}
<div class="highlighted-media">
  <h2 class="mt-4">Featured In</h2>
  <div class="logo-grid">
    {% for item in highlighted_media %}
      <div class="logo-item text-center">
        <a href="{{ item.link }}" target="_blank" rel="noopener noreferrer">
          <img src="{{ site.baseurl }}/assets/img/logos/{{ item.logo }}" alt="{{ item.publisher }} logo" class="img-fluid">
        </a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.logo-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 2rem;
  align-items: center;
}
.logo-item img {
  max-height: 60px;
  width: auto;
  object-fit: contain;
}
</style>
{% endif %}
